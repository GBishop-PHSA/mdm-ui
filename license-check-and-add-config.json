{
  "ignore": [
    ".git",
    ".github",
    "coverage",
    "releases",
    ".idea",
    "test-report.xml",
    "browserslist",
    ".scannerwork",
    ".DS_Store",
    ".editorconfig",
    ".gitattributes",
    ".gitignore",
    ".nvmrc",
    "NOTICE",
    "Jenkinsfile",
    "**/*.csv",
    "**/*.yml",
    "**/*.md",
    "**/*.eot",
    "**/*.svg",
    "**/*.ttf",
    "**/*.woff",
    "**/*.woff2"
  ],
  "license": "NOTICE",

  "licenseFormats": {
    "sass": {
      "prepend": "// ",
      "eachLine": {
        "prepend": "  "
      }
    }
  },
  "trailingWhitespace": "TRIM"
}
